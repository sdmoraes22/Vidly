
@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Movies</h1>

@{
    if (Model.Count == 0)
    {
        <p>There are no avaiable movies!</p>
    }
    else
    {
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                </tr>                
            </thead>            
            @{
                foreach (var movies in Model)
                {
                    <tr>
                        <td>@Html.ActionLink((string)movies.Name, "Details", new { id = movies.Movieid })</td>             
                    </tr>
                }
            }
        </table>
    }

}



