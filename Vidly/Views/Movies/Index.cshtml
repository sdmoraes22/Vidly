
@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Movies</h1>
<a href="@Url.Action("New","Movies")">
    <button class="btn btn-primary">New</button>
</a>

@{
    if (Model.Count == 0)
    {
        <p>There are no avaiable movies!</p>
    }
    else
    {
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Genre</th>
                </tr>                
            </thead>            
            @{
                foreach (var movies in Model)
                {
                    <tr>
                        <td>@Html.ActionLink((string)movies.Name, "Edit", new { id = movies.Movieid })</td>
                        <td>@movies.Genre.Name</td>
                    </tr>
                }
            }
        </table>
    }

}



