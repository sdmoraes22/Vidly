@using Vidly.Models
@model Vidly.ViewModels.MoviesViewModel
@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Movies</h1>

@{
    if(Model.Movie.Count == 0)
    {
        <p>There are no avaiable movies!</p>
    }
    else
    {
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                </tr>                
            </thead>            
            @{
                foreach (var movies in Model.Movie)
                {
                    <tr>
                        <td>@movies.Movieid</td>
                        <td>@Html.ActionLink(@movies.Name, "Details", "Movies", new {movies.Movieid},null)</td>
                    </tr>
                }
            }
        </table>
    }

}



